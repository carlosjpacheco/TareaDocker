<div class="row">
    {{#each tareas}}
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title d-flex justify-content-between align-items-center">
                        {{title}} <a href="/tareas/edit/{{_id}}"> <i class="fas fa-edit"></i></a>
                    </h4>
                    <p>{{description}}</p>
                    <form action="/tareas/delete/{{_id}}?_method=DELETE" , method="POST">
                    <input type="hidden" name="_method" value="DELETE">
                    <button class="btn btn-danger btn-block btn-sm" type="submit">
                        Borrar
                    </button>
                </div>
            </div>
        </div>
    {{else}}
    <div class="card mx-auto">
        <div class="card-body">
            <p class="lead">No hay notas creadas.</p>
            <a href="/tareas/add" class="btn btn-success btn-block">Crea Una!</a>
        </div>
    </div>
    {{/each}}
</div>